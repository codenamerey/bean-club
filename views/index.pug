extends layout 

block content
    section(class="grow flex flex-col md:flex-col-reverse")
        if(currentUser) 
            aside(style="background: url('/images/scroll.png'); background-size: contain; background-position: center; background-repeat: no-repeat;" class="h-80 overflow-x-hidden flex flex-col self-center")
                ul.p-8.text-black.pt-16.text-center(aria-label="Devotees to the Bean" class="before:content-[attr(aria-label)] before:font-bold overflow-y-auto") 
                        
                    each user in users 
                        li= user.display_name
            
        section(class=" gap-2 md:gap-4 flex-col md:flex-row").flex.items-center.justify-center.grow.flex-wrap
            each post in posts
                article(style="word-wrap: break-word" class=" max-[475px]:m-5 min-[475px]:w-1/2 md:w-1/3 lg:w-1/4 aspect-square bg-slate-400 text-black dark:text-white dark:bg-slate-600 p-2 rounded flex flex-col overflow-y-auto shadow-md shadow-current")  
                    h1.text-2xl.font-bold.text-orange-500.text-center(style="text-shadow: 1px 1px 0 white")= post.title
                    p.text-justify.my-auto= post.content
                    if(currentUser)
                        p(class=" italic text-gray-300") #{post.author.display_name} | #{post.creation_date.toLocaleDateString()}
                            if(post.author.id == '63bd790a701e4ab139199477')
                                br
                                span.font-bold.text-yellow-500  Site Creator
            if(currentUser)
                a(href="/post/create").px-6.py-3.rounded-full.bg-sky-500.font-bold.shadow-lg Create Post + 
            